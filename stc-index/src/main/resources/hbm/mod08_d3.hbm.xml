<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.gmu.stc.hadoop.raster.DataChunk" table="mod08">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="filePos" column="filpos" type="long"/>
        <property name="byteSize" column="bytesize" type="long"/>
        <property name="time" column="time" type="int"/>
        <property name="filePath" column="filepath" type="java.lang.String"/>
    </class>
</hibernate-mapping>